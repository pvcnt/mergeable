{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["typecheck"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "package": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}