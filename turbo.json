{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["VITE_*", "MERGEABLE_*", "CODECOV_TOKEN"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build", "typecheck"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "format": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}