{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"],
      "env": ["VITE_*", "MERGEABLE_*", "CODECOV_TOKEN"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"],
      "env": ["POLLY_MODE"]
    },
    "coverage": {
      "dependsOn": ["^coverage"],
      "outputs": ["coverage/**"],
      "env": ["POLLY_MODE"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}