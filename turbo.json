{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": ["VITE_*", "MERGEABLE_*", "CODECOV_TOKEN"]
    },
    "typecheck": {
      "dependsOn": ["build", "^typecheck"]
    },
    "lint": {
      "dependsOn": ["build", "^lint"]
    },
    "test": {
      "dependsOn": ["build", "^test"],
      "env": ["POLLY_MODE"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "env": ["POLLY_MODE"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}