generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["queryCompiler", "driverAdapters"]
  output          = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  githubId   Int       @unique
  createdAt  DateTime  @default(now()) @db.Timestamptz(6)
  lastUsedAt DateTime?
  login      String
  avatarUrl  String?
}
