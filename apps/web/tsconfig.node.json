{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/base.json",
  "include": [
    ".eslintrc.cjs",
    "react-router.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "server/**/*.ts",
    "worker-configuration.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
  }
}